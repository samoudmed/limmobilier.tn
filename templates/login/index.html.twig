{% extends 'base.html.twig' %}

{# Page-specific title and description #}
{% block title %}Déposer gratuitement votre annonce immobilière{% endblock %}
{% block meta_description %}Se connecter, devenir membre de limmobilier.tn et déposer gratuitement votre annonce immobilière{% endblock %}

{% block body %}
    <div class="container">
        {# Breadcrumbs styled with your .ht-breadcrumbs classes #}
        <ul class="ht-breadcrumbs ht-breadcrumbs--y-padding">
            <li class="ht-breadcrumbs__item">
                <a href="{{ path('homepage') }}" class="ht-breadcrumbs__link">
                    <span class="ht-breadcrumbs__title">Accueil</span>
                </a>
            </li>
            <li class="ht-breadcrumbs__item">
                <span class="ht-breadcrumbs__page">Connexion</span>
            </li>
        </ul>

        {# Main content section #}
        <div class="row" style="justify-content: center;">
            <div class="col-md-6">
                {#
                   - The main form container, using your custom class.
                   - Centering can be achieved with a wrapper if needed, or by styling the parent.
                #}
                <div class="opalmembership-login-form-wrapper">

                    <h1>Connexion</h1>
                    <p class="text-center" style="margin-bottom: 2rem;">Connectez-vous pour continuer</p>

                    {# Include the flash message component (assuming it's styled separately or uses .alert) #}
                    {% include 'default/_flash_messages.html.twig' %}

                    {# Login Form #}
                    <form action="{{ path('app_login') }}" method="POST">
                        {# Email Field #}
                        <div class="form-group">
                            <label for="username" class="form-label">Adresse e-mail</label>
                            {# Using a generic input style class from your CSS #}
                            <input type="text" name="_username" id="username" class="form-field" placeholder="votre@email.com" value="">
                        </div>

                        {# Password Field #}
                        <div class="form-group">
                            <label for="password" class="form-label">Mot de passe</label>
                            <input type="password" name="_password" id="password" class="form-field" placeholder="••••••••">
                        </div>

                        {# Submit and Forgot Password #}
                        <div class="form-group" style="display: flex; justify-content: space-between; align-items: center;">
                            <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié ?</a>
                            <button type="submit" class="btn-add-ads">Se connecter</button>
                        </div>
                    </form>

                    {# Link to Registration #}
                    <div style="margin-top: 1.5rem; text-align: center;">
                        <p>
                            Vous n'avez pas de compte ?
                            <a href="{{ path('app_register') }}">Inscrivez-vous gratuitement</a>
                        </p>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}