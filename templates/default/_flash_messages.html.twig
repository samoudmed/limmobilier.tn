{# templates/_flash_messages.html.twig #}

{% for type, messages in app.flashes %}
    {% for message in messages %}
        {#
           - Use a map to associate flash types with Tailwind CSS classes.
           - Provides a default style for unhandled types.
        #}
        {% set classes = {
            'success': 'bg-green-100 text-green-800',
            'error': 'bg-red-100 text-red-800',
            'warning': 'bg-yellow-100 text-yellow-800',
            'info': 'bg-blue-100 text-blue-800'
        } %}

        <div class="{{ classes[type] ?? 'bg-gray-100 text-gray-800' }} p-4 mb-4 rounded-lg" role="alert">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}