{% extends 'base.html.twig' %}
{% block meta %}
    {{ render(controller('App\\Controller\\Admin\\MetaController::getMeta', {'idEntity' : 1, 'entity': 'addRDV'})) }}
{% endblock %}
{% block body %}
    <div class="container-fluid">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <strong>Ajouter une annonce</strong>
                        </div>
                        <div class="card-body">
                            {% for label, messages in app.flashes %}
                                {% for message in messages %}
                                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                                        <strong>{{ message }}</strong>
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">Ã—</span>
                                        </button>
                                    </div>
                                {% endfor %}
                            {% endfor %}
                            {{ form_start(form) }}
                            {{ form_errors(form) }}
                            <div class="form-group row">
                                {{ form_label(form.Start, null, {'label_attr': {'class': 'col-md-3 col-form-label'}}) }}
                                <div class="col-md-9">{{ form_widget(form.Start, {'attr': {'class': 'form-control'}}) }}</div>
                                <span class="help-block">{{ form_errors(form.Start) }}</span>
                            </div>
                            <div class="form-group row">
                                {{ form_label(form.contact, null, {'label_attr': {'class': 'col-md-3 col-form-label'}}) }}
                                <div class="col-md-9">{{ form_widget(form.contact, {'attr': {'class': 'form-control'}}) }}</div>
                                <span class="help-block">{{ form_errors(form.contact) }}</span>
                            </div>
                            <div class="form-group row">
                                {{ form_label(form.bien, null, {'label_attr': {'class': 'col-md-3 col-form-label'}}) }}
                                <div class="col-md-9">{{ form_widget(form.bien, {'attr': {'class': 'form-control'}}) }}</div>
                                <span class="help-block">{{ form_errors(form.bien) }}</span>
                            </div>
                            <div>
                                {{ form_widget(form.save, {'attr': {'class': 'btn btn-sm btn-primary'}}) }}
                            </div>

                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.row-->
        </div>
    </div>
</main>
</div>
{% endblock %}