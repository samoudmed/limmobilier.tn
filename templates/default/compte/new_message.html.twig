{% extends 'base.html.twig' %}
{% block meta %}
    {{ render(controller('App\\Controller\\Admin\\MetaController::getMeta', {'idEntity' : 1, 'entity': 'favoris'})) }}
{% endblock %}
{% block body %}

    <div class="container-fluid">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <!-- Align justify icon SVG -->
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" style="vertical-align: middle; margin-right: 4px;">
                                <path fill-rule="evenodd" d="M2 12.5a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5zm0-3a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5zm0-3a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5zm0-3a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5z"/>
                            </svg>
                            Enoyer un message
                        </div>
                        <div class="card-body">
                            <div class="email-app">
                                <main>
                                    {{ form_start(form) }}
                                    {{ form_errors(form) }}
                                    {{ form_row(form._token) }}
                                    <div class="form-row mb-3">
                                        <label class="col-3 col-sm-1 col-form-label" for="to">To:</label>
                                        <div class="col-10 col-sm-11">
                                            {{ contact.nom}} {{ contact.prenom}}
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        {{ form_label(form.sujet, null, {'label_attr': {'class': 'col-sm-1 col-form-label'}}) }}
                                        <div class="col-md-9">{{ form_widget(form.sujet, {'attr': {'class': 'form-control'}}) }}</div>
                                        <span class="help-block">{{ form_errors(form.sujet) }}</span>
                                    </div>
                                    <div class="form-group row">
                                        {{ form_label(form.message, null, {'label_attr': {'class': 'col-sm-1 col-form-label'}}) }}
                                        <div class="col-sm-11 ml-auto">
                                            <div class="form-group mt-4">
                                                {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
                                                <span class="help-block">{{ form_errors(form.sujet) }}</span>
                                            </div>
                                            <div class="form-group">
                                                
                                                {{ form_widget(form.save, {'attr': {'class': 'btn btn-sm btn-primary'}}) }}
                                            </div>
                                        </div>
                                    </div>
                                    </form>
                                </main>
                            </div>
                        </div>
                        <!-- /.row-->
                    </div>
                </div>
                </main>
            </div>
        {% endblock %}