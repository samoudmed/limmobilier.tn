{% extends 'base.html.twig' %}

{% block body %}
<div class="container py-5">
    <h1 class="mb-4 text-center fw-bold" style="font-size:2.2rem;">Estimation immobilière Tunisie</h1>
    <div class="row justify-content-center mb-4">
        <div class="col-md-8">
            <form method="post" class="card shadow-sm p-4 bg-light rounded">
                <div class="row mb-3">
                    <div class="col-md-6 mb-3">
                        <label for="gouvernorat" class="form-label">Gouvernorat</label>
                        <select name="gouvernorat" id="gouvernorat" class="form-select" required>
                            <option value="">Sélectionner</option>
                            {% for gouv in gouvernorats %}
                                <option value="{{ gouv }}" {% if resultat and resultat.gouvernorat == gouv %}selected{% endif %}>{{ gouv }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="type" class="form-label">Type de bien</label>
                        <select name="type" id="type" class="form-select" required>
                            <option value="">Sélectionner</option>
                            {% for t in types %}
                                <option value="{{ t }}" {% if resultat and resultat.type == t %}selected{% endif %}>{{ t }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6 mb-3">
                        <label for="surface_totale" class="form-label">Surface totale (m²)</label>
                        <input type="number" name="surface_totale" id="surface_totale" class="form-control" min="1" required value="{{ resultat.surface_totale|default('') }}">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="surface_batie" class="form-label">Surface bâtie (m²)</label>
                        <input type="number" name="surface_batie" id="surface_batie" class="form-control" min="0" value="{{ resultat.surface_batie|default('') }}">
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6 mb-3">
                        <label for="chambres" class="form-label">Nombre de chambres</label>
                        <input type="number" name="chambres" id="chambres" class="form-control" min="0" value="{{ resultat.chambres|default('') }}">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Options / Caractéristiques</label><br>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" name="options[]" value="jardin" id="optJardin" {% if resultat and 'jardin' in resultat.options %}checked{% endif %}>
                            <label class="form-check-label" for="optJardin">Jardin</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" name="options[]" value="garage" id="optGarage" {% if resultat and 'garage' in resultat.options %}checked{% endif %}>
                            <label class="form-check-label" for="optGarage">Garage</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" name="options[]" value="piscine" id="optPiscine" {% if resultat and 'piscine' in resultat.options %}checked{% endif %}>
                            <label class="form-check-label" for="optPiscine">Piscine</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" name="options[]" value="terrasse" id="optTerrasse" {% if resultat and 'terrasse' in resultat.options %}checked{% endif %}>
                            <label class="form-check-label" for="optTerrasse">Terrasse</label>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary w-100 mt-3">Estimer</button>
            </form>
        </div>
    </div>
    {% if resultat %}
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card border-0 shadow-lg bg-white rounded p-4 mb-4">
                    <h4 class="mb-3 text-success">Résultat de l'estimation</h4>
                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item"><strong>Prix estimé :</strong> <span class="text-primary">{{ resultat.prix_estime|number_format(0, '.', ' ') }} TND</span></li>
                        <li class="list-group-item"><strong>Prix de référence au m² :</strong> {{ resultat.prix_m2|number_format(0, '.', ' ') }} TND</li>
                        <li class="list-group-item"><strong>Surface totale :</strong> {{ resultat.surface_totale }} m²</li>
                        <li class="list-group-item"><strong>Surface bâtie :</strong> {{ resultat.surface_batie }} m²</li>
                        <li class="list-group-item"><strong>Nombre de chambres :</strong> {{ resultat.chambres }}</li>
                        <li class="list-group-item"><strong>Options :</strong> {{ resultat.options|join(', ') }}</li>
                    </ul>
                    <div class="alert alert-info">
                        <i class="fa fa-info-circle"></i> Cette estimation est basée sur les références du marché tunisien et les données des annonces publiées.
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://use.fontawesome.com/releases/v6.4.0/js/all.js"></script>
{% endblock %}
