{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
<section id="main-container" class="container inner">

    <!-- Fil d’Ariane -->
    <ul class="ht-breadcrumbs ht-breadcrumbs--y-padding ht-breadcrumbs--b-border">
        <li class="ht-breadcrumbs__item">
            <a href="{{ path('homepage') }}" class="ht-breadcrumbs__link">
                <span class="ht-breadcrumbs__title">Accueil</span>
            </a>
        </li>
        <li class="ht-breadcrumbs__item">
            <span class="ht-breadcrumbs__page">Réinitialisez votre mot de passe</span>
        </li>
    </ul>

    <div class="row">
        <div id="main-content" class="main-content col-12">
            <div id="primary" class="content-area">
                <div id="content" class="site-content" role="main">
                    <article class="page type-page status-publish hentry">
                        <div class="entry-content-page clearfix">

                            <!-- Message de confirmation -->
                            <div class="row justify-content-center">
                                <div class="col-md-6">
                                    <div class="panel opalmembership-login-form-wrapper shadow-sm rounded">
                                        <div class="panel-body p-4">
                                            <h3>Bonjour</h3>

                                            <p>
                                                ✉️ Si un compte correspondant à votre adresse e-mail existe, 
                                                un e-mail vient d'être envoyé contenant un lien que vous pouvez utiliser 
                                                pour réinitialiser votre mot de passe.
                                            </p>

                                            <p class="text-danger">
                                                ⚠️ Ce lien expirera dans 
                                                {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.
                                            </p>

                                            <p>
                                                Si vous ne recevez pas d'e-mail, veuillez vérifier votre dossier spam ou 
                                                <a href="{{ path('app_forgot_password_request') }}">réessayer</a>.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /Message de confirmation -->

                        </div>
                    </article>
                </div><!-- #content -->
            </div><!-- #primary -->
        </div><!-- #main-content -->
    </div>
</section>
{% endblock %}
