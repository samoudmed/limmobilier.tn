{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
<section id="main-container" class="container inner">

    <!-- Fil d'Ariane -->
    <ul class="ht-breadcrumbs ht-breadcrumbs--y-padding ht-breadcrumbs--b-border">
        <li class="ht-breadcrumbs__item">
            <a href="{{ path('homepage') }}" class="ht-breadcrumbs__link">
                <span class="ht-breadcrumbs__title">Accueil</span>
            </a>
        </li>
        <li class="ht-breadcrumbs__item">
            <span class="ht-breadcrumbs__page">Réinitialisez votre mot de passe</span>
        </li>
    </ul>

    <div class="row">
        <div id="main-content" class="main-content col-12">
            <div id="primary" class="content-area">
                <div id="content" class="site-content" role="main">
                    <article class="page type-page status-publish hentry">
                        <div class="entry-content-page clearfix">

                            <!-- Formulaire réinitialisation -->
                            <div class="row justify-content-center">
                                <div class="col-md-6">
                                    <div class="panel opalmembership-login-form-wrapper shadow-sm rounded">
                                        <div class="panel-body p-4">
                                            <h3>Réinitialisez votre mot de passe</h3>

                                                {% for flash_error in app.flashes('reset_password_error') %}
                                                    <div class="alert alert-danger" role="alert">
                                                        {{ flash_error }}
                                                    </div>
                                                {% endfor %}

                                                {{ form_start(resetForm) }}
                                                            <div class="form-group">
                                                                <label for="{{ resetForm.plainPassword.first.vars.id }}" class="required">Nouveau mot de passe</label>
                                                                {{ form_widget(resetForm.plainPassword.first, {
                                                                    'attr': {
                                                                        'class': 'form-control',
                                                                        'placeholder': '••••••••',
                                                                        'autocomplete': 'new-password'
                                                                    }
                                                                }) }}
                                                                {{ form_errors(resetForm.plainPassword.first) }}
                                                            </div>
                                                            <div class="form-group">
                                                                <label for="{{ resetForm.plainPassword.second.vars.id }}" class="required">Confirmer le mot de passe</label>
                                                                {{ form_widget(resetForm.plainPassword.second, {
                                                                    'attr': {
                                                                        'class': 'form-control',
                                                                        'placeholder': '••••••••',
                                                                        'autocomplete': 'new-password'
                                                                    }
                                                                }) }}
                                                                {{ form_errors(resetForm.plainPassword.second) }}
                                                            </div>
                                                            <div class="form-group">
                                                                <button type="submit" class="btn-add-ads">Enregistrer</button>
                                                            </div>
                                                {{ form_end(resetForm) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /Formulaire réinitialisation -->

                            <!-- Espace vide -->
                            <div class="row mt-4"></div>

                            <div class="pag clearfix" style="clear: both"></div>
                        </div>
                    </article>
                </div><!-- #content -->
            </div><!-- #primary -->
        </div><!-- #main-content -->
    </div>
</section>
{% endblock %}
