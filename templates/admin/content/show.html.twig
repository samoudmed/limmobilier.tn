{% extends 'base-admin.html.twig' %}

{% block title %}Content{% endblock %}

{% block body %}
    <h1>Content</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ content.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ content.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ content.contenu }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ content.createdAt ? content.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ content.updatedAt ? content.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('content_index') }}">back to list</a>

    <a href="{{ path('content_edit', {'id': content.id}) }}"><i class="la la-edit"></i></a>

    {{ include('admin/content/_delete_form.html.twig') }}
{% endblock %}
