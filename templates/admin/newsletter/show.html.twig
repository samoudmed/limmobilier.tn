{% extends 'base-admin.html.twig' %}

{% block title %}Newsletter{% endblock %}

{% block body %}
    <div class="content d-flex flex-column flex-column-fluid" id="kt_content">
        <!--begin::Subheader-->
        <!--end::Subheader-->
        <!--begin::Entry-->
        <div class="d-flex flex-column-fluid">
            <!--begin::Container-->
            <div class="container-fluid">
                <!--begin::Card-->
                <div class="card card-custom gutter-b">
                    <div class="card-header flex-wrap py-3">
                        <div class="card-title">
                            <h3 class="card-label">Newsletter</h3>
                        </div>
                    </div>
                    <div class="card-body">
                        <!--begin: Datatable-->
                        <div id="kt_datatable_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                            <div class="row">
                                <div class="col-sm-12">
                                    <table class="table">
                                        <tbody>
                                            <tr>
                                                <th>Id</th>
                                                <td>{{ newsletter.id }}</td>
                                            </tr>
                                            <tr>
                                                <th>Nom</th>
                                                <td>{{ newsletter.nom }}</td>
                                            </tr>
                                            <tr>
                                                <th>Prénom</th>
                                                <td>{{ newsletter.prenom }}</td>
                                            </tr>
                                            <tr>
                                                <th>Email</th>
                                                <td>{{ newsletter.email }}</td>
                                            </tr>
                                            <tr>
                                                <th>Préférences</th>
                                                <td></td>
                                            </tr>
                                            <tr>
                                                <td colspan="2">
                                                    <table>
                                                        <thead>
                                                            <tr>
                                                                <th>Offre</th>
                                                                <th>Type</th>
                                                                <th>Gouvernorat</th>
                                                                <th>Délégation</th>
                                                                <th>Ville</th>
                                                            </tr>
                                                        </thead>
                                                        {%  for newsletterGeo in newsletter.newsletterGeo %}
                                                            <tbody>
                                                                <tr>
                                                                    <td>{{ newsletterGeo.offre }}</td>
                                                                    <td>{{ newsletterGeo.type }}</td>
                                                                    <td>{{ newsletterGeo.gouvernorat }}</td>
                                                                    <td>{{ newsletterGeo.delegation }}</td>
                                                                    <td>{{ newsletterGeo.ville }}</td>
                                                                </tr>
                                                            </tbody>
                                                        {% endfor %} 
                                                    </table>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <div class="row">
                                        <div class="col-lg-10">
                                            <a href="{{ path('app_newsletter_index') }}">back to list</a>

                                            <a href="{{ path('app_newsletter_edit', {'id': newsletter.id}) }}"><i class="la la-edit"></i></a>
                                        </div>   
                                        <div class="col-lg-2 right">
                                            {{ include('admin/newsletter/_delete_form.html.twig') }}
                                        </div> 
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--end: Datatable-->
                    </div>
                </div>
                <!--end::Card-->
            </div>
            <!--end::Container-->
        </div>
        <!--end::Entry-->
    </div>



{% endblock %}
