                    <div class="fv-plugins-message-container">
                        <div data-field="email" data-validator="notEmpty" class="fv-help-block">{{ form_errors(form.titre) }}</div>
                    </div>
                </div>
            </div>
            <div class="form-group row fv-plugins-icon-container has-danger">
