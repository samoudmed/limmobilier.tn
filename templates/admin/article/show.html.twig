{% extends 'base-admin.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Subheader-->
    <!--end::Subheader-->
    <!--begin::Entry-->
    <div class="d-flex flex-column-fluid">
        <!--begin::Container-->
        <div class="container-fluid">
            <!--begin::Card-->
            <div class="card card-custom gutter-b">
                <div class="card-header flex-wrap py-3">
                    <div class="card-title">
                        <h3 class="card-label"><h1>Article</h1></h3>
                    </div>
                </div>
                <div class="card-body">
                    <!--begin: Datatable-->
                    <div id="kt_datatable_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                        <div class="row">
                            <div class="col-sm-12">
                                <table class="table">
                                    <tbody>
                                                                                    <tr>
                                                <th>Id</th>
                                                <td>{{ article.id }}</td>
                                            </tr>
                                                                                    <tr>
                                                <th>Titre</th>
                                                <td>{{ article.titre }}</td>
                                            </tr>
                                                                                    <tr>
                                                <th>Texte</th>
                                                <td>{{ article.texte }}</td>
                                            </tr>
                                                                                    <tr>
                                                <th>Statut</th>
                                                <td>{{ article.statut ? 'Yes' : 'No' }}</td>
                                            </tr>
                                                                                    <tr>
                                                <th>PublishedOn</th>
                                                <td>{{ article.publishedOn ? article.publishedOn|date('Y-m-d') : '' }}</td>
                                            </tr>
                                                                            </tbody>
                                </table>

                                <a href="{{ path('app_article_index') }}">back to list</a>

                                <a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>

                                {{ include('admin/article/_delete_form.html.twig') }}
                            </div>
                        </div>
                    </div>
                    <!--end: Datatable-->
                </div>
            </div>
            <!--end::Card-->
        </div>
        <!--end::Container-->
    </div>
    <!--end::Entry-->
</div>
{% endblock %}
