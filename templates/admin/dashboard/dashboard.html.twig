{% extends 'base-admin.html.twig' %}

{% block body %}
    <style>
        .dashboard-container { display: flex; min-height: 100vh; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; }
        .sidebar { width: 260px; background-color: #003d66; color: #fff; padding: 30px 20px; }
        .sidebar h2 { font-weight: 700; margin-bottom: 30px; font-size: 28px; }
        .sidebar ul { list-style: none; padding: 0; }
        .sidebar ul li { margin-bottom: 15px; }
        .sidebar ul li a {
            color: #cbd7e3;
            text-decoration: none;
            font-size: 16px;
            display: block;
            padding: 8px 12px;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }
        .sidebar ul li a:hover, .sidebar ul li a.active {
            background-color: #0059b3;
            color: #fff;
        }
        .main-content { flex-grow: 1; background-color: #f7f9fc; padding: 40px 50px; }
        header h1 { font-weight: 700; color: #003d66; margin-bottom: 10px; }
        header p { font-size: 18px; color: #555; margin-bottom: 30px; }

        .widgets { display: flex; gap: 30px; flex-wrap: wrap; margin-bottom: 40px; }
        .widget {
            flex: 1 1 250px;
            background: #fff;
            border-radius: 8px;
            padding: 25px 30px;
            box-shadow: 0 4px 8px rgb(0 0 0 / 0.1);
            transition: transform 0.15s ease-in-out;
        }
        .widget:hover { transform: translateY(-3px); }
        .widget h3 {
            margin-bottom: 12px;
            color: #003d66;
            font-weight: 600;
            font-size: 20px;
        }
        .widget .stat {
            font-size: 36px;
            font-weight: 700;
            color: #007bff;
        }
        .widget .icon {
            font-size: 40px;
            color: #007bff;
            float: right;
            opacity: 0.15;
        }
        /* Responsive */
        @media (max-width: 768px) {
            .dashboard-container { flex-direction: column; }
            .sidebar { width: 100%; display: flex; overflow-x: auto; }
            .sidebar ul { display: flex; gap: 15px; }
            .sidebar ul li { margin-bottom: 0; }
            .main-content { padding: 30px 20px; }
            .widgets { flex-direction: column; }
            .widget { flex: 1 1 100%; }
        }
    </style>

    <div class="dashboard-container">
        <main class="main-content">
            <section style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 30px; margin-bottom: 40px;">
                <!-- Column 1: Ads Statistics -->
                <div>
                    <div class="widget" style="background: #fff; border-radius: 8px; padding: 25px 30px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); margin-bottom: 20px;">
                        <h3>Total Annonces</h3>
                        <p class="stat" style="font-size:36px; font-weight:700; color:#007bff;">{{ allAnnoncesCount|default(0) }}</p>
                        <small>Depuis le lancement</small>
                    </div>
                    <div class="widget" style="background: #fff; border-radius: 8px; padding: 25px 30px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); margin-bottom: 20px;">
                        <h3>Annonces aujourd'hui</h3>
                        <p class="stat" style="font-size:36px; font-weight:700; color:#28a745;">{{ countAdsCreatedToday|default(0) }}</p>
                        <small>Ajoutées ce jour</small>
                    </div>
                    <div class="widget" style="background: #fff; border-radius: 8px; padding: 25px 30px; box-shadow: 0 4px 8px rgba(0,0,0,0.1);margin-bottom: 20px;">
                        <h3>Annonces ce mois</h3>
                        <p class="stat" style="font-size:36px; font-weight:700; color:#ffc107;">{{ countAdsCreatedThisMonth|default(0) }}</p>
                        <small>Ajoutées ce mois</small>
                    </div>  
                    <div class="widget" style="background: #fff; border-radius: 8px; padding: 25px 30px; box-shadow: 0 4px 8px rgba(0,0,0,0.1);margin-bottom: 20px;">
                        <h3>Annonces le mois dernier</h3>
                        <p class="stat" style="font-size:36px; font-weight:700; color:#1bc5bd;">{{ countAdsCreatedLastMonth|default(0) }}</p>
                        <small>Le mois dernier</small>
                    </div> 
                </div>
                <!-- Column 2: User Statistics -->
                <div>
                    <div class="widget" style="background: #fff; border-radius: 8px; padding: 25px 30px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); margin-bottom: 20px;">
                        <h3>Nouvel Abonné</h3>
                        <p class="stat" style="font-size: 36px; font-weight: 700; color: #dc3545;">
                            {{ newSubscribers|default(0) }}
                        </p>
                        <small>Abonnés récents</small>
                    </div>
                </div>

                <!-- Column 3: Recent Ads -->
                <div>
                    <div class="widget" style="background: #fff; border-radius: 8px; padding: 25px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); height: 100%;">
                        <h3 style="margin-bottom: 20px;">Annonces récentes</h3>
                        <ul style="list-style: none; padding: 0; margin: 0;">
                            {% for annonce in annonces %}
                                <li style="padding: 10px 0; border-bottom: 1px solid #eee;">
                                    {{ annonce.label }}
                                </li>
                            {% else %}
                                <li style="padding: 10px 0;">Aucune annonce</li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                        </section>
                    </main>
                </div>
{% endblock %}